<%= simple_form_for(@pant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :pant_name %>
    <%= f.input :price %>
    <%= f.input :pleats %>
    <%= f.input :cuffs %>
    <%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
