<h1>Box Requests</h1>

<table class="table">
  <tr>
    <th>Customer</th>
    <th>Name</th>
    <th>Address</th>
    <th>Number</th>
    <th>Requesttype</th>
    <th>Request date</th>
    <th>Date sent</th>
    <th>Shipping Number</th>
    <th>Followed up</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boxrequests.each do |boxrequest| %>
  <tr>
    <td><%= boxrequest.customer_id %></td>
    <td><%= boxrequest.customer.name %></td>
    <td><%= boxrequest.customer.address %></td>
    <td><%= boxrequest.customer.phonenumber %></td>
    <td><%= boxrequest.requesttype %></td>
    <td><%= boxrequest.request_date %></td>
    <td><%= boxrequest.date_sent %></td>
     <td><%= boxrequest.shipping_number %></td>
    <td><%= boxrequest.followed_up %></td>
    <td><%= link_to 'Show', boxrequest, class: "btn btn-mini" %></td>
    <td><%= link_to 'Edit', edit_boxrequest_path(boxrequest), class: "btn btn-mini" %></td>
    <td><%= link_to 'Destroy', boxrequest, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Box Request', new_boxrequest_path, class: "btn btn-mini btn-primary" %>
