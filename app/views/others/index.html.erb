<h1>Listing others</h1>

<table>
  <tr>
    <th>Other name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @others.each do |other| %>
  <tr>
    <td><%= other.other_name %></td>
    <td><%= other.price %></td>
    <td><%= other.description %></td>
    <td><%= other.quantity %></td>
    <td><%= link_to 'Show', other %></td>
    <td><%= link_to 'Edit', edit_other_path(other) %></td>
    <td><%= link_to 'Destroy', other, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

