<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :height %>
    <%= f.input :weight %>
    <%= f.input :phonenumber %>
    <% if @customer.meas_final.neck.present? %>
      <%= f.fields_for :meas_final do |builder| %>
        <%= render 'meas_final_fields', f: builder %>
      <% end %>
    <% else %>
      <%= f.fields_for :meas_initial do |builder| %>
        <%= render 'meas_init_fields', f: builder %>
      <% end %>
    <% end %>
  
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

