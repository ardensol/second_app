<h1>Listing orders</h1>

<table class="table">
  <tr>
    <th>Customer</th>
    <th>Order value</th>
    <th>Order discount</th>
    <th>Order commission</th>
    <th>Order gross</th>
    <th>Altered?</th>
    <th>Returned?</th>
    <th>Alt/Ret Cost</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.customer_id %></td>
    <td><%= order.order_value %></td>
    <td><%= order.order_discount %></td>
    <td><%= order.order_commission %></td>
    <td><%= order.order_gross %></td>
    <td><%= order.altered %></td>
    <td><%= order.refunded %></td>
    <td><%= order.alt_ref_cost %></td>
    <td><%= link_to 'Show', order, class: "btn btn-mini" %></td>
    <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-mini btn-primary" %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini btn-destroy" %></td>
  </tr>
<% end %>
</table>

