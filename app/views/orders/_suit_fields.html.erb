<fieldset>

    <%= f.input :suit_name %>  
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.input :lapel, collection: ["Standard", "Slim", "Peak"] %>
    <%= f.input :vent, collection: ["1","2","3"] %>
    <%= f.input :button, collection: ["1","2","3"] %>
    <%= f.input :contrast_color %>
    <%= f.input :contrast_area, as: :check_boxes, collection: ["Inside Collar", "Lapel Button", "Sleeve Button", "Lining"] %>
    <%= f.input :advanced, collection: ["Functional Buttons", "picked stitching (lapel)"] %>
    <%= f.input :pleats, collection: ["No Pleats", "Pleats"] %>
    <%= f.input :cuffs, collection: ["Cuffs", "No Cuffs"] %>
    <%= link_to  "remove", '#', class: "remove_fields" %>
</fieldset>