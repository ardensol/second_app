<fieldset>
  <%= f.label :product_name, "product" %> <br />
  <%= f.text_field :product_name %>
  <%= link_to  "remove", '#', class: "remove_fields" %>
  <%= f.label :product_price, "price" %> <br />
  <%= f.text_field :product_price %><br />
  <%= link_to  "remove", '#', class: "remove_fields" %>
<%= f.fields_for :customizations do |builder| %>
<%= render 'customization_fields', f: builder %>
<% end %>

<%= link_to_add_fields "Add Customizations", f, :customizations %>
</fieldset>