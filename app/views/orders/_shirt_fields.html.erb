<fieldset>
   <%= f.input :shirt_name %>  
	<%= f.input :quantity %>
    <%= f.input :price %>
  <%= f.input :collar, collection: ["Standard", "Straight", "Cutaway"] %>
  <%= f.input :cuffs, collection: ["Standard", "Mitered", "French"] %>
  <%= f.input :placket, collection: ["No Placket", "Placket"] %>
   <%= f.input :pocket, collection: ["No Pocket", "Pocket"] %>
    <%= f.input :fit, collection: ["Slim", "Standard"] %>
     <%= f.input :bottom, collection: ["Tail", "No Tail"] %>
  <%= f.input :contrast_color %>
  <%= f.input :contrast_area, as: :check_boxes, collection: ["Inside Collar", "Inside Cuffs", "Inside Placket"] %>
  <%= f.input :monongram %>
  <%= link_to  "remove", '#', class: "remove_fields" %>
</fieldset>